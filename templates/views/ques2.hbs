        crossorigin="anonymous"></script>
    <script src="/loader/index.js"></script>

    <script>
        var myForm = document.getElementById('myForm');

        myForm.addEventListener('submit', (e) => {
            e.preventDefault();
            //console.log("submitted")
            var answer = document.getElementById('answer').value;
            var result = "Muttiah Muralitharan";
            if (answer === result || answer === "muralitharan") {
                //console.log(answer)
                window.location.href = "ques3";
            } else {
                M.toast({ html: 'Wrong answer. Hint: Player from Srilanka' });
                //console.log("Submitted answer is uncorrect")
            }

        });
    </script>

