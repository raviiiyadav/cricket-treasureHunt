<body class="grey lighten-4">

    <!-- Top Nav -->
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper center">
                <a href="#!" class="center brand">Cricket Puzzle
                </a>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Form -->
        <div class="row mt-5 mb-5">
            <div class="w-100 w-md-50 mx-auto">
                <div class="card white card-top-blue">
                    <div class="card-content">
                        <span class="card-title black-text underline">Question 2</span>
                        <div name="questionBox">
                            <div class="row mt-4">
                                <h5 class="left heading">Visit <a
                                        href="https://stats.espncricinfo.com/ci/content/records/93276.html">ESPN
                                        Cricinfo</a> website and find out who is highest wicket taker in
                                    test cricket?</h5>

                            </div>
                            <form class="form" id="myForm">
                                <label for="answer">Your Answer</label>
                                <input id="answer" name="answer" type="text" class="validate">
                                <button type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
